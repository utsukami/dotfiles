[global]
    font = "Iosevka 10"
    allow_markup = yes
    format = "<b>%s %p</b>\n%b"
    sort = yes
    indicate_hidden = true
    idle_threshold = 0
    geometry = "200x5-6+30"
    alignment = center
    show_age_threshold = 60
    sticky_history = yes
    follow = mouse
    word_wrap = yes
    separator_height = 2
    padding = 10
    horizontal_padding = 5
	vertical_padding = 30
    separator_color = frame
    startup_notification = true

[frame]
    width = 4
    color = "#e52035"

[urgency_low]
    background = "#ffffff"
    foreground = "#000000"
    timeout = 3

[urgency_normal]
    background = "#27245C"
    foreground = "#ffffff"
    timeout = 7

[urgency_critical]
    background = "#ff9999"
    foreground = "#000000"
    timeout = 0
