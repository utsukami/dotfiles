## Modes/AHK

# enter modes
$bsym $mod+Control+1 mode "jad"
$bsym $mod+Control+2 mode "ahk"
$bsym $mod+Control+3 mode "alt"
$bcod $mod+40 mode "resize"

$bsym $mod+Left $exe xdotool mousemove_relative -- -850 -0
$bsym $mod+Right $exe xdotool mousemove_relative 850 0
$bsym $mod+Down $exe xdotool mousemove_relative 0 500
$bsym $mod+Up $exe xdotool mousemove_relative -- -0 -500

$codr $mod+45 $shx $cbp/git_bot.sh
$bcod $mod+Control+53 $shx $cbp/kgh.sh

# modes
mode "ahk" {
	# keys 1 2 3 4 5
	$bcod 10 $shx $xdo/1
	$bcod 11 $shx $xdo/2
	$bcod Shift+11 $shx $xdo/2
	$bcod 12 $shx $xdo/3
	$bcod Shift+12 $shx $xdo/3
	$codr 13 $shx $xdo/4
	$codr 14 $shx $xdo/5
	
	# keys ' , . p 
	$bcod 24 $shx $xdo/1
	$bcod 25 $shx $xdo/c
	$bcod 26 $shx $xdo/3
	$codr 27 $shx $xdo/p
	
	# keys y u spacebar
	$bcod 28 $shx $xdo/y
	$bcod 41 $shx $xdo/u
	
	# keys a o e 
	$bcod 38 $shx $xdo/acc1
	$bcod 39 $shx $xdo/acc2
	$bcod 40 $shx $xdo/acc3

	$bcod 49 mode "default"
	$bsym $mod+Control+2 mode "default"
	$bsym $mod+Shift+P restart
}

mode "alt" {
	# client teleports	
	$bcod 10 $shx $xdo/acc1
	$bcod 11 $shx $xdo/acc2
	$bcod 12 $shx $xdo/acc3
	$bcod 13 $shx $xdo/acc4
	
	# tt autoclicker
	$bcod $mod+49 $shx $cbp/tt.sh
	$bcod Shift+49 $shx $cbp/ktta.sh
	
	# autoclicker
	$bcod 41 $shx $cbp/dk.sh
	$bcod 44 $shx $cbp/darts.sh

	$bcod 49 mode "default"
	$bsym $mod+Control+3 mode "default"
	$bsym $mod+Shift+P restart
}

mode "jad" {
	$codr 10 $exe xdotool key F1
	$codr 11 $exe xdotool key Escape
	$codr 12 $exe xdotool key F5
	$codr 13 $exe xdotool key F6	

	$bcod 49 mode "default"
	$bsym $mod+Control+1 mode "default"
}

mode "resize" {
	$bsym h resize shrink width 10 px or 10 ppt
	$bsym j resize grow height 10 px or 10 ppt
	$bsym k resize shrink height 10 px or 10 ppt
	$bsym l resize grow width 10 px or 10 ppt

	$bsym Control+H resize shrink width 45 px or 45 ppt
	$bsym Control+J resize grow height 45 px or 45 ppt
	$bsym Control+K resize shrink height 45 px or 45 ppt
	$bsym Control+L resize grow width 45 px or 45 ppt

	$bsym Return mode "default"
	$bsym Escape mode "default"
}

## End Modes/AHK

